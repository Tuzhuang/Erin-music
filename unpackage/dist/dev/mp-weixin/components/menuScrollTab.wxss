.menu-scroll-tab {
  width: 100%;
  height: calc(100vh - 160rpx);
}
.menu-scroll-tab .menu-name-con {
  white-space: nowrap;
  width: 100%;
  height: 60rpx;
  display: flex;
  align-items: center;
  position: relative;
  margin-bottom: 20rpx;
}
.menu-scroll-tab .menu-name-con .menu-name-item {
  display: inline-block;
  width: 50px;
  height: 100%;
  margin: 0 10px;
  box-sizing: border-box;
  text-align: center;
  line-height: 50rpx;
}
.menu-scroll-tab .menu-name-con .menu-name-item .menu-name {
  font-size: 28rpx;
  color: #d2d2d2;
}
.menu-scroll-tab .menu-name-con .slide-box {
  width: 50px;
  height: 7rpx;
  position: absolute;
  top: 50rpx;
  left: 10px;
  display: flex;
  justify-content: center;
  transition: .7s;
}
.menu-scroll-tab .menu-name-con .slide-box .slide {
  width: 32rpx;
  height: 7rpx;
  border-radius: 20rpx;
  background: linear-gradient(to right, #ec5044, #e27f86);
  transition: .5s;
}
.menu-scroll-tab .menu-name-con .slide-box .slide.active {
  width: 48rpx;
}
.menu-scroll-tab .menu-con-swiper {
  height: 100%;
}
.menu-scroll-tab .menu-con-swiper .menu-con-swiper-item {
  width: 100%;
  height: 100%;
}
.menu-scroll-tab .menu-con-swiper .menu-con-swiper-item .menu-content {
  width: 100%;
  height: 100%;
}

