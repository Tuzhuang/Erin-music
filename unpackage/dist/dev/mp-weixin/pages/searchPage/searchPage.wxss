.search-detail {
  background: #1b1b25;
  min-height: 100vh;
}
.search-detail .search-con {
  height: 80rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx;
  box-sizing: border-box;
}
.search-detail .search-con .emoj-icon {
  width: 50rpx;
  height: 50rpx;
  margin-right: 15rpx;
}
.search-detail .search-con .search-bar {
  flex: 1;
  height: 60rpx;
  display: flex;
  align-items: center;
  background: #323137;
  border-radius: 40rpx;
  overflow: hidden;
  padding: 0 20rpx;
  box-sizing: border-box;
}
.search-detail .search-con .search-bar .search-icon {
  width: 30rpx;
  height: 30rpx;
}
.search-detail .search-con .search-bar .search {
  width: 100%;
  height: 50rpx;
  margin-left: 10rpx;
  font-size: 26rpx;
  color: #fbfbfb;
  caret-color: #a2a2a3;
}
.search-detail .search-con .search-bar .search-del {
  width: 50rpx;
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 0 -10rpx 0 10rpx;
}
.search-detail .search-con .search-bar .search-del .search-del-icon {
  width: 30rpx;
  height: 30rpx;
}
.search-detail .search-con .search-btn {
  width: 50rpx;
  font-size: 24rpx;
  color: #fff;
  margin-left: 20rpx;
}
.search-detail .category {
  width: 100%;
  height: 100rpx;
  margin-top: 20rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.search-detail .category .type {
  width: 20%;
  text-align: center;
}
.search-detail .category .type .label {
  font-size: 24rpx;
  color: #bbbbbe;
}
.search-detail .search-history {
  padding: 20rpx;
  box-sizing: border-box;
}
.search-detail .search-history .top {
  height: 50rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 10rpx;
}
.search-detail .search-history .top .title {
  font-size: 26rpx;
  color: #f4f4f4;
}
.search-detail .search-history .top .del-icon {
  width: 30rpx;
  height: 30rpx;
}
.search-detail .search-history .history-con {
  width: 100%;
}
.search-detail .search-history .history-con .his-list {
  height: 100%;
  display: flex;
  flex-wrap: wrap;
  width: 94%;
  overflow: hidden;
  white-space: nowrap;
  overflow: hidden;
}
.search-detail .search-history .history-con .his-list.hide {
  height: 50rpx;
}
.search-detail .search-history .history-con .his-list .item {
  font-size: 24rpx;
  line-height: 30rpx;
  color: #d6d6d7;
  padding: 10rpx 20rpx;
  background: #32323a;
  border-radius: 50rpx;
  white-space: nowrap;
  margin-right: 20rpx;
  margin-bottom: 20rpx;
  max-width: 300rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.search-detail .search-history .history-con .his-list .arrow-icon {
  width: 20rpx;
  height: 20rpx;
  padding: 14rpx;
  background: #32323a;
  border-radius: 100%;
  transition: .5s;
  margin-right: 20rpx;
}
.search-detail .search-history .history-con .his-list .arrow-icon.up {
  -webkit-transform: rotate(180deg);
          transform: rotate(180deg);
}
.search-detail .search-history .history-con .his-list .arrow-icon.down {
  margin-right: 50rpx;
}
.search-detail .leaderboard {
  height: 100%;
}
.search-detail .leaderboard .swiper-list {
  width: 100%;
  height: 1286rpx;
  margin-right: 20rpx;
}
.search-detail .leaderboard .swiper-list .board-item {
  height: 100%;
  padding-right: 20rpx;
}
.search-detail .leaderboard .swiper-list .board-item .board-container {
  width: 100%;
  height: 100%;
  border-radius: 16rpx;
  background-color: #32323a;
  padding: 20rpx;
  box-sizing: border-box;
}
.search-detail .leaderboard .swiper-list .board-item .board-container .top-con {
  display: flex;
  align-items: center;
  padding-bottom: 20rpx;
  border-bottom: 1rpx solid #414149;
}
.search-detail .leaderboard .swiper-list .board-item .board-container .top-con .title {
  font-size: 28rpx;
  color: #f2f3f5;
  font-weight: bold;
  margin-right: 30rpx;
}
.search-detail .leaderboard .swiper-list .board-item .board-container .top-con .play-auto {
  display: flex;
  align-items: center;
  padding: 4rpx 14rpx;
  border: 1rpx solid #3f3f47;
  background-color: #3d3d47;
  border-radius: 50rpx;
}
.search-detail .leaderboard .swiper-list .board-item .board-container .top-con .play-auto .play-icon {
  width: 14rpx;
  height: 14rpx;
  margin-right: 10rpx;
}
.search-detail .leaderboard .swiper-list .board-item .board-container .top-con .play-auto .play {
  font-size: 20rpx;
  color: #d2d2dc;
}
.search-detail .leaderboard .swiper-list .board-item .board-container .cont-list {
  height: 60rpx;
  display: flex;
  align-items: center;
}
.search-detail .leaderboard .swiper-list .board-item .board-container .cont-list .num {
  width: 20rpx;
  font-size: 28rpx;
  color: #aeafb3;
  margin-right: 30rpx;
}
.search-detail .leaderboard .swiper-list .board-item .board-container .cont-list .num.forward {
  color: #f94942;
}
.search-detail .leaderboard .swiper-list .board-item .board-container .cont-list .content {
  font-size: 24rpx;
  color: #f4f5f9;
}
.search-detail .leaderboard .swiper-list .board-item .board-container .cont-list .content.forward {
  font-weight: bold;
  font-size: 24rpx;
}
.search-detail .leaderboard .swiper-list .board-item .board-container .cont-list .type-icon {
  width: 46rpx;
  height: 26rpx;
  margin-left: 20rpx;
}
.search-detail .search-suggest {
  width: 100%;
  padding-left: 20rpx;
  box-sizing: border-box;
}
.search-detail .search-suggest .suggest-item {
  height: 70rpx;
  display: flex;
  align-items: center;
}
.search-detail .search-suggest .suggest-item .search-icon {
  width: 30rpx;
  height: 30rpx;
  margin-right: 10rpx;
}
.search-detail .search-suggest .suggest-item .suggest-text {
  width: 100%;
  height: 100%;
  line-height: 70rpx;
  font-size: 24rpx;
  color: #f0f1f5;
  border-bottom: 1rpx solid #2e2e38;
}
.search-detail .search-suggest .suggest-item .suggest-text .select {
  color: #64646e;
}
.search-detail .block {
  height: 200rpx;
}

