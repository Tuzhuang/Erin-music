.search-detail {
  background: #1b1b23;
  min-height: 100vh;
}
.search-detail .search-con {
  height: 80rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx;
  box-sizing: border-box;
}
.search-detail .search-con .emoj-icon {
  width: 50rpx;
  height: 50rpx;
  margin-right: 15rpx;
}
.search-detail .search-con .search-bar {
  flex: 1;
  height: 60rpx;
  display: flex;
  align-items: center;
  background: #323139;
  border-radius: 40rpx;
  overflow: hidden;
  padding: 0 20rpx;
  box-sizing: border-box;
}
.search-detail .search-con .search-bar .search-icon {
  width: 30rpx;
  height: 30rpx;
}
.search-detail .search-con .search-bar .search {
  width: 100%;
  height: 50rpx;
  margin-left: 10rpx;
  font-size: 26rpx;
  color: #fbfbfb;
  caret-color: #a2a2a3;
}
.search-detail .search-con .search-btn {
  width: 50rpx;
  font-size: 24rpx;
  color: #fff;
  margin-left: 20rpx;
}
.search-detail .category {
  width: 100%;
  height: 100rpx;
  margin-top: 20rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.search-detail .category .type {
  width: 20%;
  text-align: center;
}
.search-detail .category .type .label {
  font-size: 24rpx;
  color: #bbbbbe;
}
.search-detail .search-history {
  padding: 20rpx;
  box-sizing: border-box;
}
.search-detail .search-history .top {
  height: 50rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 10rpx;
}
.search-detail .search-history .top .title {
  font-size: 26rpx;
  color: #f4f4f4;
}
.search-detail .search-history .top .del-icon {
  width: 30rpx;
  height: 30rpx;
}
.search-detail .search-history .history-con {
  width: 100%;
}
.search-detail .search-history .history-con .his-list {
  height: 100%;
  display: flex;
  flex-wrap: wrap;
  width: 94%;
  overflow: hidden;
  white-space: nowrap;
  overflow: hidden;
}
.search-detail .search-history .history-con .his-list.hide {
  height: 50rpx;
}
.search-detail .search-history .history-con .his-list .item {
  font-size: 24rpx;
  line-height: 30rpx;
  color: #d6d6d7;
  padding: 10rpx 20rpx;
  background: #32323a;
  border-radius: 50rpx;
  white-space: nowrap;
  margin-right: 20rpx;
  margin-bottom: 20rpx;
  max-width: 300rpx;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.search-detail .search-history .history-con .his-list .arrow-icon {
  width: 20rpx;
  height: 20rpx;
  padding: 14rpx;
  background: #32323a;
  border-radius: 100%;
  transition: .5s;
  margin-right: 20rpx;
}
.search-detail .search-history .history-con .his-list .arrow-icon.up {
  -webkit-transform: rotate(180deg);
          transform: rotate(180deg);
}
.search-detail .box {
  width: 100%;
  height: 500rpx;
  border: 1px solid #000;
  overflow-y: scroll;
}
.search-detail .cont {
  width: 100%;
  height: 1000px;
  background: skyblue;
}

