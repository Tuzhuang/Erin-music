.song-list {
  width: 100%;
  height: 100%;
  padding: 0 20rpx;
  box-sizing: border-box;
}
.song-list .list-scroll {
  height: 100%;
}
.song-list .list-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}
.song-list .list-item:last-of-type {
  margin-bottom: 0;
}
.song-list .list-item .left-img {
  min-width: 100rpx;
  min-height: 120rpx;
  position: relative;
}
.song-list .list-item .left-img .bg-cover {
  width: 88rpx;
  height: 90rpx;
  border-radius: 20rpx;
  background-color: #282c2b;
  position: absolute;
  top: 0;
  left: 8rpx;
}
.song-list .list-item .left-img .cover-img {
  width: 100rpx;
  height: 100rpx;
  border-radius: 20rpx;
  position: absolute;
  top: 8rpx;
}
.song-list .list-item .info-con {
  width: 100%;
  height: 100%;
  font-size: 24rpx;
  color: #656567;
  margin: 0 20rpx;
  white-space: nowrap;
  overflow: hidden;
}
.song-list .list-item .info-con .title {
  width: 100%;
  font-size: 30rpx;
  color: #fcfcfc;
  overflow: hidden;
  text-overflow: ellipsis;
}
.song-list .list-item .info-con .desc,
.song-list .list-item .info-con .detail {
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.song-list .list-item .score {
  min-width: 90rpx;
  min-height: 90rpx;
  color: #e6e6e6;
  display: flex;
  align-items: center;
  justify-content: flex-end;
}
.song-list .list-item .score .fract {
  font-size: 36rpx;
  font-weight: bold;
}
.song-list .list-item .score .text {
  font-size: 18rpx;
  margin-left: 4rpx;
  margin-top: 14rpx;
}

