.single {
  width: 100%;
  height: 100%;
  padding: 0 20rpx;
  box-sizing: border-box;
}
.single .single-scroll {
  height: 100%;
}
.single .sing-item {
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: space-between;
  border-bottom: 1px solid #303030;
  padding: 10rpx 0;
  box-sizing: border-box;
}
.single .sing-item:first-of-type {
  padding-top: 0;
}
.single .sing-item:last-of-type {
  border-bottom: none;
}
.single .sing-item .left-info {
  max-width: 80%;
}
.single .sing-item .left-info .song-name {
  font-size: 30rpx;
  color: #fefefe;
}
.single .sing-item .left-info .song-info {
  display: flex;
  align-items: center;
  margin: 4rpx 0;
  height: 28rpx;
}
.single .sing-item .left-info .song-info .tag {
  font-size: 18rpx;
  padding: 0rpx 4rpx;
  border-radius: 6rpx;
  margin-right: 10rpx;
  white-space: nowrap;
}
.single .sing-item .left-info .song-info .tag.origin {
  background: #f9463e;
  color: #ffeeef;
}
.single .sing-item .left-info .song-info .tag.quality {
  border: 1rpx solid #c3a366;
  color: #c3a366;
}
.single .sing-item .left-info .song-info .sing-name {
  font-size: 26rpx;
  color: #696a65;
  white-space: nowrap;
}
.single .sing-item .left-info .origin-singer {
  display: flex;
  align-items: center;
  margin-top: 8rpx;
}
.single .sing-item .left-info .origin-singer .tag {
  font-size: 20rpx;
  color: #de845b;
  font-weight: bold;
  background: rgba(222, 132, 91, 0.2);
  padding: 2rpx 4rpx;
  border-radius: 8rpx;
  margin-right: 10rpx;
  white-space: nowrap;
}
.single .sing-item .left-info .origin-singer .origin-info {
  width: 100%;
  font-size: 24rpx;
  color: #60605e;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  display: flex;
  align-items: center;
}
.single .sing-item .left-info .origin-singer .origin-info .line {
  display: block;
  width: 1px;
  height: 16rpx;
  background: #656565;
  margin: 4rpx 10rpx 0;
}
.single .sing-item .left-info .origin-singer .origin-info ._span {
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.single .sing-item .right-info {
  display: flex;
  align-items: center;
  position: relative;
  left: 20rpx;
}
.single .sing-item .right-info .video-play-icon {
  width: 120rpx;
  height: 120rpx;
}

