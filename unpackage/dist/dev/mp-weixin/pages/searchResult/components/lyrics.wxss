.lyrics {
  width: 100%;
  height: 100%;
}
.lyrics .lyrics-scroll {
  height: 100%;
}
.lyrics .lyrics-item {
  padding: 20rpx;
  padding-bottom: 0;
  box-sizing: border-box;
}
.lyrics .lyrics-item:first-of-type {
  padding-top: 0;
}
.lyrics .lyrics-item .top-con {
  display: flex;
  align-items: center;
}
.lyrics .lyrics-item .top-con .play-icon {
  width: 32rpx;
  height: 32rpx;
  background: pink;
  margin-right: 20rpx;
}
.lyrics .lyrics-item .top-con .detail-con {
  flex: 1;
  overflow: hidden;
}
.lyrics .lyrics-item .top-con .detail-con .name {
  font-size: 30rpx;
  color: #f9f9f9;
}
.lyrics .lyrics-item .top-con .detail-con .desc-con {
  display: flex;
  align-items: center;
  margin-top: 10rpx;
}
.lyrics .lyrics-item .top-con .detail-con .desc-con .tag {
  font-size: 20rpx;
  padding: 0 2rpx;
  white-space: nowrap;
  margin-right: 10rpx;
}
.lyrics .lyrics-item .top-con .detail-con .desc-con .tag.origin {
  border-radius: 4rpx;
  background: #2d1618;
  color: #c45351;
}
.lyrics .lyrics-item .top-con .detail-con .desc-con .tag.quality {
  border: 1rpx solid #5a553d;
  border-radius: 6rpx;
  color: #cfaf6d;
  font-size: 16rpx;
}
.lyrics .lyrics-item .top-con .detail-con .desc-con .desc {
  font-size: 24rpx;
  color: #a0a0a0;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.lyrics .lyrics-item .top-con .detail-con .origin-info {
  font-size: 24rpx;
  color: #a6a6a6;
  margin-top: 4rpx;
}
.lyrics .lyrics-item .top-con .video-play {
  width: 100rpx;
  height: 100rpx;
}
.lyrics .lyrics-item .top-con .video-play .video-icon {
  width: 100%;
  height: 100%;
  position: relative;
  right: -20rpx;
}
.lyrics .lyrics-item .lyrics-info {
  width: 100%;
  display: flex;
  align-items: flex-start;
  margin-top: 20rpx;
}
.lyrics .lyrics-item .lyrics-info .word-icon {
  width: 34rpx;
  height: 34rpx;
  font-size: 24rpx;
  font-weight: bold;
  color: #131313;
  background: #767676;
  border-radius: 6rpx;
  text-align: center;
  line-height: 34rpx;
  margin-right: 20rpx;
  margin-top: 8rpx;
}
.lyrics .lyrics-item .lyrics-info .lyrics-con {
  flex: 1;
  border-bottom: 1rpx solid #303030;
  padding-bottom: 30rpx;
}
.lyrics .lyrics-item .lyrics-info .lyrics-con .lyr-con {
  max-height: calc(44rpx * 3);
  overflow: hidden;
  transition: .3s;
}
.lyrics .lyrics-item .lyrics-info .lyrics-con .lyr-item {
  height: 44rpx;
  font-size: 28rpx;
  color: #cecece;
  line-height: 44rpx;
}
.lyrics .lyrics-item .lyrics-info .lyrics-con .expand {
  display: flex;
  align-items: center;
  font-size: 22rpx;
  color: #636363;
  margin-top: 16rpx;
}
.lyrics .lyrics-item .lyrics-info .lyrics-con .expand .arrow-icon {
  width: 32rpx;
  height: 32rpx;
  margin-left: 6rpx;
  -webkit-transform: rotate(90deg);
          transform: rotate(90deg);
}
.lyrics .lyrics-item .lyrics-info .lyrics-con .expand .arrow-icon.put {
  -webkit-transform: rotate(-90deg);
          transform: rotate(-90deg);
}

