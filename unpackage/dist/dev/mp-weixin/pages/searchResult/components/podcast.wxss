.podcast {
  width: 100%;
  height: 100%;
  padding: 20rpx;
  padding-top: 0;
  box-sizing: border-box;
}
.podcast .podcast-scroll {
  height: 100%;
}
.podcast .podcast-item {
  display: flex;
  align-items: center;
  margin-bottom: 20rpx;
}
.podcast .podcast-item .left-avatar {
  min-width: 120rpx;
  min-height: 140rpx;
  position: relative;
}
.podcast .podcast-item .left-avatar .bg-img {
  width: 100rpx;
  height: 100rpx;
  border-radius: 10rpx;
  background: #2c2c2c;
  position: absolute;
  top: 0rpx;
  left: 10rpx;
}
.podcast .podcast-item .left-avatar .avatar {
  width: 120rpx;
  height: 120rpx;
  border-radius: 10rpx;
  position: absolute;
  top: 8rpx;
}
.podcast .podcast-item .info-con {
  width: 100%;
  margin: 0 20rpx;
  overflow: hidden;
}
.podcast .podcast-item .info-con .title {
  font-size: 32rpx;
  color: #e8e8e8;
}
.podcast .podcast-item .info-con .desc-con {
  display: flex;
  align-items: center;
  margin-top: 10rpx;
}
.podcast .podcast-item .info-con .desc-con .tag {
  font-size: 20rpx;
  color: #8691af;
  padding: 0 4rpx;
  border: 1rpx solid #363441;
  border-radius: 6rpx;
  margin-right: 10rpx;
  white-space: nowrap;
}
.podcast .podcast-item .info-con .desc-con .desc {
  font-size: 24rpx;
  color: #5d5d5d;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.podcast .podcast-item .info-con .desc {
  font-size: 24rpx;
  color: #5d5d5d;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}
.podcast .podcast-item .score {
  width: 80rpx;
  height: 80rpx;
  font-size: 38rpx;
  color: #e7e7e7;
  font-weight: bold;
  display: flex;
  align-items: center;
}
.podcast .podcast-item .score .text {
  font-weight: normal;
  font-size: 20rpx;
  margin-top: 14rpx;
  margin-left: 4rpx;
}

