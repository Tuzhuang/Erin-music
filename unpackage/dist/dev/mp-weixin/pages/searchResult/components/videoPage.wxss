.video-page {
  width: 100%;
  height: 100%;
}
.video-page .videos-scroll {
  height: 100%;
}
.video-page .sub-menu-con {
  display: flex;
  align-items: flex-start;
  padding: 20rpx;
  padding-bottom: 10rpx;
  box-sizing: border-box;
}
.video-page .sub-menu-con:first-of-type {
  padding-top: 0;
}
.video-page .sub-menu-con .video-con {
  width: 350rpx;
  height: 200rpx;
  margin-right: 20rpx;
  border-radius: 20rpx;
  overflow: hidden;
  position: relative;
}
.video-page .sub-menu-con .video-con .image-cover,
.video-page .sub-menu-con .video-con .video-cover {
  width: 100%;
  height: 100%;
}
.video-page .sub-menu-con .video-con .time {
  position: absolute;
  right: 15rpx;
  bottom: 10rpx;
  font-size: 24rpx;
  color: #edf0f0;
}
.video-page .sub-menu-con .mv-info {
  flex: 1;
  margin-top: 10rpx;
}
.video-page .sub-menu-con .mv-info .mv-name {
  font-size: 32rpx;
  color: #f8f8f8;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}
.video-page .sub-menu-con .mv-info .author,
.video-page .sub-menu-con .mv-info .play-count {
  font-size: 24rpx;
  color: #626262;
  margin-top: 16rpx;
}
.video-page .sub-menu-con .mv-info .play-count {
  color: #616161;
  margin-top: 4rpx;
}

