.play-detail {
  width: 100%;
  height: 100vh;
  background: #383838;
}
.play-detail .detail-con {
  height: 100vh;
  position: -webkit-sticky;
  position: sticky;
  z-index: 50;
}
.play-detail .bg-img {
  width: 100vw;
  height: 100vh;
  -webkit-backdrop-filter: blur(10px);
          backdrop-filter: blur(10px);
  -webkit-filter: blur(50px);
          filter: blur(50px);
  position: absolute;
  z-index: 0;
}
.play-detail .top-box {
  width: 100%;
  height: 80rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 30rpx;
  box-sizing: border-box;
}
.play-detail .top-box .back-icon {
  width: 44rpx;
  height: 44rpx;
  -webkit-transform: rotate(90deg);
          transform: rotate(90deg);
}
.play-detail .top-box .song-info .name {
  font-size: 26rpx;
  color: #fff;
}
.play-detail .top-box .song-info .singer {
  font-size: 22rpx;
  color: #c9c9c9;
  margin-top: 6rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
.play-detail .top-box .song-info .singer .more-icon {
  width: 30rpx;
  height: 30rpx;
  margin-left: -2rpx;
}
.play-detail .top-box .share {
  width: 40rpx;
  height: 40rpx;
}
.play-detail .rod {
  width: 204rpx;
  height: 358rpx;
  position: absolute;
  left: 50%;
  -webkit-transform: translateX(-10%);
          transform: translateX(-10%);
  z-index: 50;
  margin-top: 20rpx;
  transition: .6s;
  -webkit-transform-origin: 22rpx 62rpx;
          transform-origin: 22rpx 62rpx;
}
.play-detail .rod.pause {
  -webkit-transform: rotate(-30deg);
          transform: rotate(-30deg);
}
.play-detail .music-con {
  width: 620rpx;
  height: 620rpx;
  border-radius: 50%;
  background: rgba(238, 238, 238, 0.4);
  border: 1px solid #ccc;
  position: relative;
  margin: 220rpx auto 170rpx;
}
.play-detail .music-con .bg-disc {
  width: 600rpx;
  height: 600rpx;
  position: absolute;
  top: 50%;
  left: 50%;
  -webkit-transform: translate(-50%, -50%);
          transform: translate(-50%, -50%);
  z-index: 10;
}
.play-detail .music-con .music-img {
  width: 500rpx;
  height: 500rpx;
  border-radius: 50%;
  overflow: hidden;
  position: absolute;
  top: 50%;
  left: 50%;
  -webkit-transform: translate(-50%, -50%);
          transform: translate(-50%, -50%);
}
.play-detail .opera-con {
  width: 100%;
  height: 70rpx;
  display: flex;
  justify-content: space-around;
}
.play-detail .opera-con .item-icon {
  width: 70rpx;
  height: 70rpx;
  position: relative;
}
.play-detail .opera-con .item-icon .opera-icon {
  width: 100%;
  height: 100%;
}
.play-detail .opera-con .item-icon .count {
  position: absolute;
  top: 7rpx;
  left: 46rpx;
  font-size: 18rpx;
  color: #e4e1db;
}
.play-detail .play-bar {
  width: 100%;
  height: 40rpx;
  background: #fff;
  margin-top: 50rpx;
  position: absolute;
  padding: 0 30rpx;
  box-sizing: border-box;
}
.play-detail .play-opera {
  width: 100%;
  height: 180rpx;
  display: flex;
  align-items: center;
  justify-content: space-around;
  position: absolute;
  bottom: 20rpx;
}
.play-detail .play-opera .play-order .mode-icon,
.play-detail .play-opera .play-menu {
  width: 80rpx;
  height: 80rpx;
}
.play-detail .play-opera .control-play {
  width: 340rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.play-detail .play-opera .control-play .prev-icon,
.play-detail .play-opera .control-play .next-icon {
  width: 60rpx;
  height: 60rpx;
}
.play-detail .play-opera .control-play .control {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
  border: 2px solid #e6e4e3;
  display: flex;
  justify-content: center;
  align-items: center;
  transition: .4s;
}
.play-detail .play-opera .control-play .control.play {
  border-color: #d2cfcc;
}
.play-detail .play-opera .control-play .control .contr-icon {
  width: 50rpx;
  height: 50rpx;
}

